<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F3F4F6">

    <!-- App Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AppVideo2"
        android:textSize="24sp"
        android:textColor="#4A90E2"
        android:fontFamily="sans-serif-medium"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp" />

    <!-- Record Video Button -->
    <Button
        android:id="@+id/btn_record_video"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Grabar Video"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FF6D00"
        android:fontFamily="sans-serif-medium"
        android:textSize="16sp"
        android:layout_below="@id/title"
        android:layout_marginBottom="15dp"
        android:background="@drawable/rounded_button" />

    <!-- View Saved Videos Button -->
    <Button
        android:id="@+id/btn_view_videos"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Ver Videos Guardados"
        android:textColor="#FFFFFF"
        android:backgroundTint="#03A9F4"
        android:fontFamily="sans-serif-medium"
        android:textSize="16sp"
        android:layout_below="@id/btn_record_video"
        android:layout_marginBottom="15dp"
        android:background="@drawable/rounded_button" />

    <!-- Play Last Video Button -->
    <Button
        android:id="@+id/btn_play_last_video"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Reproducir Ãšltimo Video"
        android:textColor="#FFFFFF"
        android:backgroundTint="#4CAF50"
        android:fontFamily="sans-serif-medium"
        android:textSize="16sp"
        android:layout_below="@id/btn_view_videos"
        android:background="@drawable/rounded_button" />

    <!-- ListView for displaying video names -->
    <ListView
        android:id="@+id/list_videos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_play_last_video"
        android:layout_marginTop="20dp"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        android:background="#FFFFFF"
        android:padding="8dp" />
</RelativeLayout>
